<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sample"
            android:background="@drawable/back_nav_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/personName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/personName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintStart_toEndOf="@+id/dp"
            app:layout_constraintTop_toTopOf="@+id/dp"
            android:textSize="23sp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/lastscenetv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last scene at Yesterday"
            android:textSize="16sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/tgrey"
            app:layout_constraintTop_toBottomOf="@+id/personName"
            app:layout_constraintStart_toStartOf="@+id/personName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>