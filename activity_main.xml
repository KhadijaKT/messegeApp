<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample_appbg"
    tools:context=".MainActivityKotlin">

    <ImageView
        android:id="@+id/splashimg2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_image2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/splashmsg1"
        android:layout_marginStart="70dp"
        android:foregroundGravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/splashimg1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="210dp"
        android:foregroundGravity="center_horizontal"
        />

    <TextView
        android:id="@+id/splashmsg1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen_message"
        android:textAlignment="center"
        android:fontFamily="@font/lato_black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/splashimg2"
        app:layout_constraintBottom_toBottomOf="@+id/splashmsg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="50dp"
        />

    <TextView
        android:id="@+id/splashmsg2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_message"
        android:fontFamily="@font/mulish_regular"
        app:layout_constraintTop_toBottomOf="@+id/splashmsg1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>